<Window x:Class="AutoUpdate.UrlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUpdate"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="设置网址" Height="200" Width="480">
    <Grid Background="#F0F0F0">
        <Button x:Name="button" Content="确定" HorizontalAlignment="Left" Margin="190,114,0,0" VerticalAlignment="Top" Width="75" Click="CloseWindow" Height="25"/>
        <Label x:Name="label" Content="更新网址：" HorizontalAlignment="Left" Margin="65,59,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="url_text" HorizontalAlignment="Left" Height="23" Margin="150,61,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="234" FontSize="15"/>

    </Grid>
</Window>
