<Window x:Class="AutoUpdate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUpdate"
        mc:Ignorable="d"
        Title="自动更新系统" Height="565.962" Width="800">

    <Grid x:Name="Base_Page">
        <Menu x:Name="menu" HorizontalAlignment="Left" Margin="-2,-1,0,0" VerticalAlignment="Top" Width="794" Height="28">
            <MenuItem x:Name="menu_file" Header=" 文件 " Height="28">
                <MenuItem x:Name="menu_file_create" Header="新建配置文件" Height="28"/>
                <MenuItem x:Name="menu_file_edit" Header="编辑配置文件" Height="28" />
                <MenuItem x:Name="menu_file_exit" Header="退出" Height="28" />
            </MenuItem>
            <MenuItem x:Name="menu_setting" Header=" 设置 " Height="28">
                <MenuItem x:Name="menu_setting_url" Header="设置网址" Height="28"/>
            </MenuItem>
            <MenuItem x:Name="menu_main" Header=" 主界面 " />
            <MenuItem x:Name="menu_help" Header=" 帮助 " />
            <Button x:Name="button" Content="主界面" Width="75" Click="button_Click"/>
            <Button x:Name="button1" Content="配置界面" Width="75" Click="button1_Click"/>
            <Button x:Name="button2" Content="子窗口" Width="75" Click="button2_Click"/>
        </Menu>
        <Grid x:Name="main_page" HorizontalAlignment="Left" Height="503" Margin="0,32,0,0" VerticalAlignment="Top" Width="792">
            <Label x:Name="label" Content="main page" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="309,217,0,0" Height="170" Width="225"/>
        </Grid>
        <Grid x:Name="configure_page" Height="503" VerticalAlignment="Top" Margin="0,32,0,0" Visibility="Hidden">
            <Label x:Name="label1" Content="configure page" HorizontalAlignment="Left" Margin="299,218,0,0" VerticalAlignment="Top" Height="131" Width="166"/>
        </Grid>

    </Grid>
</Window>
